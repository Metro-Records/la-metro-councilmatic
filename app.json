{
  "name": "la-metro-councilmatic",
  "description": "A Councilmatic instance for the LA Metro Transit Authority",
  "scripts": {},
  "env": {
    "DJANGO_DEBUG": {
      "required": true
    },
    "DJANGO_ALLOWED_HOSTS": {
      "required": true
    },
    "DJANGO_SECRET_KEY": {
      "required": true
    },
    "DJANGO_FLUSH_KEY": {
      "required": true
    },
    "DJANGO_REFRESH_KEY": {
      "required": true
    },
